{
  "name": "jianghu-init-vscode",
  "displayName": "Jianghu Init",
  "description": "Jianghu Init VSCode Extension",
  "version": "0.0.3",
  "publisher": "jianghujs",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jianghujs/jianghu-init"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jianghu-init-vscode.showPropertyDoc",
        "title": "查看属性文档"
      },
      {
        "command": "jianghu-init-vscode.showPropertyDoc",
        "title": "查看属性文档"
      }
    ],
    "configuration": {
      "title": "Jianghu Init",
      "properties": {
        "jianghuInit.docPath": {
          "type": "string",
          "default": "md-doc",
          "description": "文档目录路径"
        },
        "jianghuInit.schemaValidation": {
          "type": "boolean",
          "default": true,
          "description": "是否启用配置文件结构验证"
        },
        "jianghuInit.strictValidation": {
          "type": "boolean",
          "default": false,
          "description": "是否启用严格验证模式"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jianghuCommands",
          "title": "江湖",
          "icon": "media/icon.svg"
        },
        {
          "id": "jianghuHelp",
          "title": "帮助",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "jianghuCommands": [
        {
          "id": "jianghuCommands",
          "name": "江湖命令"
        },
        {
          "id": "jianghuHelp",
          "name": "江湖帮助"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^14.x.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.x.x",
    "@typescript-eslint/parser": "^4.x.x",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.x.x",
    "typescript": "^4.x.x"
  },
  "dependencies": {
    "acorn": "^8.11.0",
    "acorn-walk": "^8.2.0",
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "marked": "^4.0.0"
  }
}
